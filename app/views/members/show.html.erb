<%- model_class = Member -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @member.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @member.position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:job_title) %>:</strong></dt>
  <dd><%= @member.job_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:line2) %>:</strong></dt>
  <dd><%= @member.line2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @member.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar_file_name) %>:</strong></dt>
  <dd><%= @member.avatar_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar_content_type) %>:</strong></dt>
  <dd><%= @member.avatar_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar_file_size) %>:</strong></dt>
  <dd><%= @member.avatar_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar_updated_at) %>:</strong></dt>
  <dd><%= @member.avatar_updated_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar2_file_name) %>:</strong></dt>
  <dd><%= @member.avatar2_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar2_content_type) %>:</strong></dt>
  <dd><%= @member.avatar2_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar2_file_size) %>:</strong></dt>
  <dd><%= @member.avatar2_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avatar2_updated_at) %>:</strong></dt>
  <dd><%= @member.avatar2_updated_at %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              members_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_member_path(@member), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              member_path(@member),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
