<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => @event.name.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @event.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @event.position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time) %>:</strong></dt>
  <dd><%= @event.time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:details) %>:</strong></dt>
  <dd><%= @event.details %></dd>
  <dt><strong><%= model_class.human_attribute_name(:place) %>:</strong></dt>
  <dd><%= @event.place %></dd>
  <dt><strong><%= model_class.human_attribute_name(:line2) %>:</strong></dt>
  <dd><%= @event.line2 %></dd>
  <dt><strong><%= model_class.human_attribute_name("Images") %>:</strong></dt>
  <dd>
  <%= image_tag @event.image.url(:medium) %><br>
  <% unless @event.image2.blank? %><%= image_tag @event.image2.url(:medium) %><% end%><br>
  <% unless @event.image3.blank? %><%= image_tag @event.image3.url(:medium) %><% end%><br>
  <% unless @event.image4.blank? %><%= image_tag @event.image4.url(:medium) %><% end%>
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              events_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_path(@event), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_path(@event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
