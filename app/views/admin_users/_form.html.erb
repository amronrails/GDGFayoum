<%= form_for @admin_user, :html => { :class => "form-horizontal admin_user" } do |f| %>

    <% if @admin_user.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@admin_user.errors.count, "error") %> prohibited this admin_user from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @admin_user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'form-control' %>
    </div>
    <%= error_span(@admin_user[:username]) %>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, :class => 'form-control' %>
    </div>
    <%= error_span(@admin_user[:password_digest]) %>
  </div>
  <div class="control-group">
    <%= f.label :adminstrator, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :adminstrator, :class => 'form-control' %>
    </div>
    <%= error_span(@admin_user[:adminstrator]) %>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <%= error_span(@admin_user[:email]) %>
  </div>
  <div class="control-group">
    <%= f.label :avatar_file_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :avatar_file_name, :class => 'form-control' %>
    </div>
    <%= error_span(@admin_user[:avatar_file_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :avatar, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :avatar, :class => 'form-control' %>
    </div>
    <%= error_span(@admin_user[:avatar]) %>
  </div>


<br>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            admin_users_path, :class => 'btn btn-default' %>

<% end %>
